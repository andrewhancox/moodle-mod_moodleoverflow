{{!
  @template mod_moodleoverflow/discussions

  Moodleoverflow discussion_list template.
  The purpose of this template is to render a list of discussions for the view.php.

  Example context (json):
  {
  }
}}

{{! There are no discussions. Print the string that specifies it. }}
{{^hasdiscussions}}
    <div class="moodleoverflowdiscussions" xmlns="http://www.w3.org/1999/html">
        ( {{#str}} nodiscussions, moodleoverflow {{/str}} )
    </div>
{{/hasdiscussions}}

{{! There are discussions. Start to print the table. }}
{{#hasdiscussions}}

    {{#discussions}}
        <div class="moodleoverflowdiscussion d-flex flex-column border p-2 mb-3">
            <div class="d-flex">
            <div class="leftbox text-center ml-2 mr-3">
                <div class="votes text-center my-1">
                    {{> mod_moodleoverflow/postvoting }}
                </div>
            </div>
            <div class="w-100 d-flex flex-column justify-content-between">
                <div class="d-flex justify-content-between">
                    <a class="subject mb-3 mr-3" href="{{{subjectlink}}}">{{{ subjecttext }}}</a>

                    <div class="pt-2 text-right">
                        {{#cansubtodiscussion}}
                            <div class="discussionsubscription">{{{discussionsubicon}}}</div>
                        {{/cansubtodiscussion}}

                        {{#unread}}
                            <div class="mod_moodleoverflow-no-wrap">
                                <a class="d-inline-block mt-3" href="{{ unreadlink }}">
                                    <span class="fa fa-envelope icon mr-0 moodleoverflow-icon-1_5x text-muted">
                                    </span><span class="unread-bubble">
                                        {{ unreadamount }}
                                    </span>
                                </a>
                            </div>
                        {{/unread}}
                    </div>
                </div>
            </div>
            </div>
            <div class="d-flex flex-row justify-content-between">
                <div class="d-flex flex-row align-items-center ">
                <span class="status moodleoverflow-icon-no-margin">
                    {{# questionunderreview }}
                        <span class="mx-2">
                        {{#pix}}i/duration, moodle, {{#str}}pending_review, mod_moodleoverflow{{/str}}{{/pix}}
                        </span>
                    {{/ questionunderreview }}
                    {{^ questionunderreview }}
                        {{#statusteacher}}
                            <a href="{{teacherlink}}" class="mx-1">{{! avoid whitespace
                                !}}{{# pix}} i/status-solved, moodleoverflow, {{#str}}teacherrating, moodleoverflow{{/str}} {{/ pix}}{{!
                            !}}</a>
                        {{/statusteacher}}
                        {{#statusstarter}}
                            <a href="{{starterlink}}" class="mx-1">{{! avoid whitespace
                                !}}{{# pix}} i/status-helpful, moodleoverflow, {{#str}}starterrating, moodleoverflow{{/str}} {{/ pix}}{{!
                            !}}</a>
                        {{/ statusstarter }}
                    {{/ questionunderreview }}
                </span>
                {{# canreview }}
                    {{# needreview }}
                    <span class="reviews mx-2">

                            <a href="{{{reviewlink}}}" class="text-danger bold"
                               title="{{#str}}amount_waiting_for_review, mod_moodleoverflow, {{needreview}}{{/str}}">
                                {{#pix}}i/commenting, mod_moodleoverflow{{/pix}}{{ needreview }}
                            </a>
                    </span>
                    {{/ needreview }}
                {{/ canreview }}
                <span class="replies my-1 mx-2" title="">
                    {{#pix}}i/reply, mod_moodleoverflow {{/pix}}{{ replyamount }}
                </span>
                    {{#userlink}}
                    <a href="{{{userlink}}}" class="user-info d-flex questioner px-2 py-1 ml-2 align-items-center">
                    {{/userlink}}
                    {{^userlink}}
                    <div class="user-info d-flex questioner px-2 py-1  ml-2 align-items-center">
                    {{/userlink}}

                    {{# picture }}
                        <div class="user-avatar">
                            {{{ picture }}}
                        </div>
                    {{/ picture }}
                    <div class="user-details">
                        {{{ username }}}
                    </div>
                    {{^userlink}}
                    </div>
                    {{/userlink}}
                    {{#userlink}}
                    </a>
                    {{/userlink}}
                </div>
                    <div class="d-flex flex-row align-items-center">

                        <span class="text-muted mr-2">Last post:</span>
                        <div>
                            <a href="{{{lastpostlink}}}" class="user-info d-flex px-2 py-1 align-items-center">
                                {{# lastpostuserpicture }}
                                    <div class="user-avatar">
                                        {{{ lastpostuserpicture }}}
                                    </div>
                                {{/ lastpostuserpicture }}
                                <div class="user-details line-height-3">
                                    {{{ lastpostusername }}}<br>
                                    {{{ lastpostdate }}}
                                </div>
                            </a>
                        </div>
                    </div>
                </span>
            </div>
        </div>
    {{/discussions}}

{{/hasdiscussions}}
